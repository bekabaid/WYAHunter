<p id="notice"><%= notice %></p>
<%= stylesheet_link_tag "styleIndex" %>

<h1>Users</h1>

<div class="tbl-header">
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Created On</th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @users.each do |user| %>
        <tr>
          <td><%= user.my_name %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at %></td>
          <td><%= link_to 'Show', user %></td>

          <td><% if current_user && is_admin  %><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %><% end %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>
