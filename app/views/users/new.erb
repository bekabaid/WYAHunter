<div class="login">
  <div class="container">
    <div class="form">

      <%= user_admin %>
      <h1>Create an Account</h1>
      <%= flash[:danger] %>
      <%= form_for(@user) do |f| %>
          <%= f.text_field :my_name, :placeholder => "Name" %>
          <%= f.email_field :email, :placeholder => "Email" %>
          <%= f.password_field :password, :placeholder => "Password" %>

          <%= f.collection_select :privilege, (CoffeeTable.all + LaptopsTable.all + RoomsTable.all + WhiteboardsTable.all), :privilege, :room %>


          <%= f.submit "Create an account", class: "btn-submit" %>

      <% end %>

    </div>
  </div>
</div>