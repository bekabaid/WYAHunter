<div class="login">
  <div class="container">
    <div class="form">

      <h1>Create an Account</h1>

      <%= form_for(@user) do |f| %>
          <%= f.text_field :my_name, :placeholder => "name" %>
          <%= f.email_field :email, :placeholder => "Email" %>
          <%= f.password_field :password, :placeholder => "Password" %>

          <%= f.collection_select :privilege, Resource.order(:title), Resource.order(:id), :name %>


          <%= f.submit "Create an account", class: "btn-submit" %>

      <% end %>

    </div>
  </div>
</div>